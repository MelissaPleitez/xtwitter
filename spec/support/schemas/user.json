{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": ["array", "object"],
  "properties": {
    "user": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "name": {
          "type": ["null", "string"]
        },
        "username": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "password": {
          "type": "null"
        },
        "created_at": {
          "type": "string"
        },
        "updated_at": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "name",
        "username",
        "email",
        "password",
        "created_at",
        "updated_at"
      ]
    },
    "token": {
      "type": "null"
    }
  },
  "required": [
    "user",
    "token"
  ]
}