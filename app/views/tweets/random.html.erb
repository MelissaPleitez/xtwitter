<div class="container mt-4">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
          <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-secondary" %>
        </div>
        <div>
          <%= link_to "Log in", new_user_session_path, class: "btn btn-primary" %>
        </div>
      </div>

      <div class="mt-3">
        <h1 class="mt-3 text-center"><i class="fa-brands fa-x-twitter"></i></h1>
        <% @random_tweets.each do |tweet| %>
          <div class="card mb-3">
            <div class="card-body">
              <h5 class="card-title"><%= tweet.user.username %></h5>
              <p class="card-text"><%= tweet.body %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
